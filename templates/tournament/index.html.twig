{% extends 'base.html.twig' %}

{% block title %}Liste des Tournois{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-12">
            <h2 class="text-primary text-center player-name">Tous les Tournois</h2>
            <hr>
           <div class="row">
               {% for tournament in tournaments %}
               <div class="col-sm-6 col-md-4">
                   <div class="card">
                       <div class="card-img-top text-center">
                           <h3><span class="card-title">{{ tournament.season.name }}</span></h3>
                       </div>
                       <div class="card-body">
                           <div class="card-text"><h4>{{ tournament.name }}</h4></div>
                           <a class="text-primary" href="{{ path('tournament_show',{id: tournament.id}) }}">Voir fiche tournoi</a>
                       </div>
                   </div>
               </div>
               {% else %}
                   Pas encore de tournois
               {% endfor %}
           </div>
        </div>
    </div>
{% endblock %}