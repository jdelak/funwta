{% extends 'base.html.twig' %}

{% block title %}Toutes les vidéos{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-12">
            <h2 class="text-primary text-center player-name">Toutes les vidéos</h2>
            <hr>
            <div class="row">
                {% for video in videos %}
                    <div class="col-sm-6 col-md-3">
                        <div class="card">
                            <div class="card-img-top text-center">
                                <h3><span class="card-title">{{ video.matchId.playerOne.name }} vs {{ video.matchId.playerTwo.name }}</span></h3>
                            </div>
                            <div class="card-body game-video">
                                <div class="game-video-content">
                                    <iframe src="{{ video.url }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    Pas encore de vidéos
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
